{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"newLine": "lf",
		"sourceMap": true,
		"outDir": "generators",
		"declaration": true,
		"declarationDir": "generate-types",
		"rootDir": "src",
		"baseUrl": "./",
		"paths": {
			"@src/*": ["src/*"]
		},
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "types.d.ts"],
	"exclude": ["src/**/templates/*", "**/__tests__/**", "copy.ts", "*.d.ts"]
}
