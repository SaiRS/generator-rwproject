{
	"compilerOptions": {
		"module": "commonjs",
		"esModuleInterop": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"newLine": "lf",
		"sourceMap": false,
		"outDir": "generators",
		"rootDir": "src",
		"baseUrl": "."
	},
	"include": [
		"src/**/*", "generators/app/templates/tsconfig.json"
	],
	"exclude": [
		"src/**/templates/*"
	]
}
